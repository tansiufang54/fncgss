<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
<!--
        <item name="android:fontFamily">@fonts/AvenirNextLTPro-Regular</item>
-->

        <item name="android:windowBackground">@color/accent</item>
    </style>

    <style name="mythemecustom" parent="AppTheme">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/abu</item>
        <item name="colorPrimaryDark">@color/gold</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/accent</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/gold</item>
        <item name="android:colorButtonNormal">@color/gold</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary </item>
        <item name="android:windowBackground">@color/accent</item>
    </style>

    <style name="LoginSignUp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/accent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomCheckedColor">
        <item name="colorAccent">@color/green</item> //color when checked
        <item name="android:textColorSecondary">@color/colorAccent</item>
     </style>

    <style name="AddCardEditText">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:text"></item>
        <item name="android:textColor">@color/grayish_brown</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AddCardDash">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:text">-</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AddCardButton">
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grayish_brown</item>
    </style>
</resources>
