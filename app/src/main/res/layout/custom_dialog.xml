<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:weightSum="10">

    <co.id.franknco.controller.MyTextView
        android:id="@+id/cd_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:gravity="center"
        android:text="Title Here"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"></LinearLayout>
    <co.id.franknco.controller.MyTextView
        android:id="@+id/cd_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:text="Dialog Message Here"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <co.id.franknco.controller.MyButton
            android:id="@+id/cd_btn_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@drawable/cd_button"
            android:gravity="center"
            android:padding="8dp"
            android:text="Btn Negative"
            android:textStyle="bold"
            android:visibility="gone" />

        <co.id.franknco.controller.MyButton
            android:id="@+id/cd_btn_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@drawable/cd_button"
            android:gravity="center"
            android:padding="8dp"
            android:text="Btn Positive"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>