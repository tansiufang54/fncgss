<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="25dp"
    android:paddingRight="32dp"
    android:paddingLeft="32dp"
    android:weightSum="10">

    <co.id.franknco.controller.MyTextView
        android:id="@+id/cd_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:gravity="center"
        android:text="Add new card"
        android:textColor="@color/grayish_brown"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <co.id.franknco.controller.MyEditText
            android:id="@+id/numb14"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            style="@style/AddCardEditText" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/AddCardDash" />

        <co.id.franknco.controller.MyEditText
            android:id="@+id/numb58"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            style="@style/AddCardEditText" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/AddCardDash" />

        <co.id.franknco.controller.MyEditText
            android:id="@+id/numb912"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            style="@style/AddCardEditText" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/AddCardDash" />

        <co.id.franknco.controller.MyEditText
            android:id="@+id/numb1316"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            style="@style/AddCardEditText" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_accent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_marginTop="37dp"
        android:padding="8dp"
        android:layout_weight="3"

        >

        <co.id.franknco.controller.MyButton
            android:id="@+id/cd_btn_negative2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/AddCardButton"
            android:text="Cancel" />
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            />
        <co.id.franknco.controller.MyButton
            android:id="@+id/cd_btn_positive2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/AddCardButton"
            android:text="Ok" />


    </LinearLayout>

</LinearLayout>