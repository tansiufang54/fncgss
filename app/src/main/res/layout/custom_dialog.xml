<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginBottom="3dp">
    <co.id.franknco.controller.MyTextView2
        android:id="@+id/cd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Unsuccessful!" />
    <co.id.franknco.controller.MyTextView
        android:id="@+id/cd_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/greyish_brown"
        android:text="Dialog Message Here"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">
        <co.id.franknco.controller.MyTextView2
            android:id="@+id/cd_btn_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:textColor="@color/greyish_brown"
            android:background="@drawable/cd_button"
            android:gravity="center"
            android:padding="5dp"
            android:text="Btn Negative"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />
        <co.id.franknco.controller.MyTextView2
            android:id="@+id/cd_btn_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:textColor="@color/greyish_brown"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="Btn Positive"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>