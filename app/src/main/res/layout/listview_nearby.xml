
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:layout_marginLeft="4dp">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/linearJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Judul -->
            <co.id.franknco.controller.MyTextView3
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GADING SERPONG"
                android:textStyle="bold"
                android:gravity="left|center"
                android:textColor="@color/colorAccent"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Address field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="11"
                android:gravity="center">
                <co.id.franknco.controller.MyTextView2
                    android:id="@+id/title_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textSize="@dimen/text_size"
                    android:text="Address"
                    android:gravity="left|center"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="2dp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

                <co.id.franknco.controller.MyTextView2
                    android:id="@+id/txt_address"
                    android:textSize="@dimen/text_size"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="Jl Gading martin Rt 05/06 palembang"
                    android:textColor="@color/colorAccent" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            </LinearLayout>

            <!-- Telp 1 field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="11"
                android:gravity="center">
                <co.id.franknco.controller.MyTextView2
                    android:id="@+id/title_telp1"
                    android:text="Telp 1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textSize="@dimen/text_size"
                    android:gravity="left|center"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="2dp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

                <co.id.franknco.controller.MyTextView2
                    android:id="@+id/txt_telp1"
                    android:text="021 9999 9999"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:textSize="@dimen/text_size"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/right"
                    android:layout_weight="0.5"
                    />

            </LinearLayout>

            <!-- Telp 2 field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="11"
                android:gravity="center">
                <co.id.franknco.controller.MyTextView2
                    android:id="@+id/title_telp2"
                    android:text="Telp 2 "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textSize="@dimen/text_size"
                    android:gravity="left|center"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="2dp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

                <co.id.franknco.controller.MyTextView2
                    android:id="@+id/txt_telp2"
                    android:text="021 7777 7777"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:textSize="@dimen/text_size"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
            </LinearLayout>

            </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>

