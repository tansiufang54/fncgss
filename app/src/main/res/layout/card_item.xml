<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Gift Card View -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/ci_image"
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/card_bg"
                    android:foregroundGravity="center"
                    android:padding="10dp"
                    android:scaleType="centerCrop" />

                <co.id.franknco.controller.MyTextView
                    android:id="@+id/ci_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ci_image"
                    android:layout_marginBottom="24dp"
                    android:layout_marginEnd="50dp"

                    android:gravity="center|end"
                    android:text="1234 5678 9101 2200"
                    android:textColor="@color/warmgray"
                    android:textSize="@dimen/text_size_button"
                    android:textStyle="bold" />

            </RelativeLayout>


            <!-- Card Information -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="22dp"
                    android:paddingTop="30dp"

                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:weightSum="3.5">
                    <!-- Card Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:paddingBottom="17dp">

                        <co.id.franknco.controller.MyTextView
                            android:id="@+id/ci_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="10.000.000"
                            android:textColor="@color/colorAccent"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:orientation="vertical">
                        <!-- Issued -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <co.id.franknco.controller.MyTextView2
                                android:id="@+id/myTextView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:text="Issued"
                                android:textColor="@color/colorAccent"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <co.id.franknco.controller.MyTextView
                                android:id="@+id/ci_issued"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end|center"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="dd / Mmm / yy"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                        </LinearLayout>
                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"/>
                        <!-- Expired -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <co.id.franknco.controller.MyTextView2
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:gravity="start|center"
                                android:textStyle="bold"
                                android:text="Expired"
                                android:textSize="14sp"
                                android:textColor="@color/colorAccent"/>
                            <co.id.franknco.controller.MyTextView
                                android:id="@+id/ci_expired"
                                android:textColor="@color/colorAccent"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:gravity="end|center"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="dd / Mmm / yy"
                                android:textSize="14sp"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:visibility="gone"/>

            <!-- Card History -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="18dp"
                    android:paddingTop="18dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp">
                    <co.id.franknco.controller.MyTextView2
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorAccent"
                        android:layout_marginBottom="8dp"/>

                    <ListView
                        android:id="@+id/lv_cardHistory"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:visibility="gone"/>
                    <co.id.franknco.controller.MyTextView
                        android:id="@+id/tv_cardHistory_Empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NO TRANSACTION FOUND"
                        android:textColor="@color/secondary_dark"
                        android:visibility="gone"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:visibility="gone"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>