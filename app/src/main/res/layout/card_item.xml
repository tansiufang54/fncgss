<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- Gift Card View -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@android:color/transparent"
              >

                <ImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/ci_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/creditcard"
                    />

                <co.id.franknco.controller.MyTextView
                    android:id="@+id/ci_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ci_image"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginRight="24dp"
                    android:gravity="center|right"
                    android:text="1234 5678 9101 2200"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_button"
                    android:textStyle="bold" />

            </RelativeLayout>


            <!-- Card Information -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="22dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="24dp"
                    android:weightSum="3.5">
                    <!-- Card Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:paddingBottom="17dp">

                        <co.id.franknco.controller.MyTextView
                            android:id="@+id/ci_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="10.000.000"
                            android:textColor="@color/colorAccent"
                            android:textSize="24dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:weightSum="2.2"
                        android:orientation="vertical">
                        <!-- Issued -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <co.id.franknco.controller.MyTextView2
                                android:id="@+id/myTextView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="Issued"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/text_size"
                                android:textStyle="bold" />

                            <co.id.franknco.controller.MyTextView
                                android:id="@+id/ci_issued"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right|center"
                                android:text="dd / Mmm / yy"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/text_size" />

                        </LinearLayout>
                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:background="@color/colorAccent"/>
                        <!-- Expired -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <co.id.franknco.controller.MyTextView2
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:textStyle="bold"
                                android:text="Expired"
                                android:textSize="@dimen/text_size"
                                android:textColor="@color/colorAccent"/>
                            <co.id.franknco.controller.MyTextView
                                android:id="@+id/ci_expired"
                                android:textColor="@color/colorAccent"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:gravity="right|center"
                                android:text="dd / Mmm / yy"
                                android:textSize="@dimen/text_size"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <!-- Card History -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="22dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="24dp">
                    <co.id.franknco.controller.MyTextView2
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorAccent"
                        android:layout_marginBottom="8dp"/>

                    <ListView
                        android:id="@+id/lv_cardHistory"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:visibility="gone"
                        />
                    <co.id.franknco.controller.MyTextView
                        android:id="@+id/tv_cardHistory_Empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NO TRANSACTION FOUND"
                        android:textColor="@color/secondary_dark"
                        android:visibility="gone"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>